{% extends "AppBundle:Default:layout.html.twig" %}
{% block body %}

{% if (app.user.birthday|date('U') > '2000-01-01'|date('U')) %}

<div id="page-wrapper"> <h1><br><br><br>Tu es bien trop jeune pour accéder à cette page ;)<h1></div>


{% else %}


<div id="page-wrapper" onload="myFunction2()">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Dépenses et crédit </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="responsive-table striped" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Montant</th>

                                        </tr>
                                    </thead>
                                    <tbody>


                                    {% set total = 0 %}
                                    {% for key, value in resultat if key != 'Tout le monde' %}
                                       <tr class="odd gradeX">
                                        <td> {{ key }} </td>
                                        <td>{{ value|round(2) }}</td>
                                      {% set total = total + value %}
                                         </tr>

                                         {% endfor %}

                                    </tbody>
                                    <tfoot> <tr>
                                         <th>Total</th>
                                    <th>{{ total|round(2) }}</th>

                                    </tfoot>

                                </table>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row --></div>

{% endif %}
<script>
$(document).ready(function() {
    $('#dataTables-example').DataTable({
            responsive: true
    });
});
</script>
{% endblock %}
