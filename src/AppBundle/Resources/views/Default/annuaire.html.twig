{% extends "AppBundle:Default:layout.html.twig" %}
{% block body %}




<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Annuaire </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Adresse</th>
                                            <th>Téléphone</th>
                                            <th>Mail</th>
                                            <th>Anniversaire</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for Ligne in UserListe %}
                                          <tr class="odd gradeX">
                                          
                                        <td>{{ Ligne.username }}</td>

                                        
                                         <td>{{ Ligne.adresse1 }}<br>{{ Ligne.adresse2 }}<br>{{ Ligne.adresse3 }}</td>
                                        <td>{{ Ligne.phone }}</td>
                                        <td>{{ Ligne.email }}</td>
                                        <td>{{ Ligne.birthday|date("d/m/Y") }}</td>
                                         
                                          {%  endfor %}
                                        </tr>
                                        
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row --></div>
{% endblock %}
           