{% extends "AppBundle:Default:layout.html.twig" %}
{% block body %}
{% if app.user.username == User.username %}

<div id="page-wrapper"> <h1><br><br><br>Petit malin... Tu attendra Noël comme tout le monde pour connaitre tes cadeaux... <br> Pour modifier ta liste, va dans "Ma Liste"<h1></div>

{% elseif (app.user.birthday|date('U') > '2000-01-01'|date('U')) %}

<div id="page-wrapper"> <h1><br><br><br>Tu es bien trop jeune pour accéder à cette page ;)<h1></div>


{% else %}

<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Liste de {{ User.username }} </h2>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
            {% if famille|length >2 %}
            <a href="{{ path('gnet_platform_listefamille', {'id':User.id })}}">
            <span class="chip ">
              <img src="{{ asset('/img/family.png')}}" alt="Contact Person">
                  Liste Famille
            </span>
            </a>
              {% endif %}
            {% if famille|length >1 %}

            <a href="{{ path('gnet_platform_listecouple', {'id':User.id})}}">
            <span class="chip ">
              <img src="{{ asset('/img/kids-couple.png')}}" alt="Contact Person">
              Liste commune couple
            </span>
            </a>              {% endif %}
</div>
            <div class="row">

            {% for famille in famille %}
              {% if famille.id != User.id %}
              <a href="{{ path('gnet_platform_autreListe', {'id':famille.id})}}">
              <span class="chip ">
                <img src="{{ asset('/img/user/' ~ famille.username ~ '.jpg')}}" alt="Contact Person">
                {{ famille.username}}
              </span>
            </a>
            {% endif %}

            {% endfor %}
            </div>

            <div class="row">
                <div class="col s12">
                    <div class="panel panel-default">

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="responsive-table striped" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th  width="5%">Statut</th>
                                            <th width="30%">Object</th>
                                            <th width="40%">Commentaire</th>
                                            <th width="15%">Lien web</th>

                                            <th width="10%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for Ligne in Liste %}
                                          <tr class="odd gradeX">
                                          <td>
                                          {% if Ligne.Pris == 1 %}

                                          <img src="{{ asset('img/rouge.png') }}" alt="Déjà pris" height="20" class="tooltipped" data-position="top" data-delay="20" data-tooltip="Indisponible">
                                          {% else %}
                                          <img src="{{ asset('img/vert.jpeg') }}" alt="Dispo"  height="20" class="tooltipped" data-position="top" data-delay="20" data-tooltip="Disponible">
                                          {% endif %}
                                          </td>
                                        <td>{{ Ligne.description }}</td>

                                         <td>{{ Ligne.commentaire }}</td>
                                         <td>{% if Ligne.url %}<a target="_blank" href="{{ Ligne.url }}">exemple</a>{% endif %}</td>

                                         <td><a href="{{ path('gnet_platform_editComment', {'id': Ligne.id }) }}"><i style="font-size:20px" class="fa fa-pencil-square-o tooltipped" data-position="bottom" data-delay="50" data-tooltip="Modifier" aria-hidden="true"></i></a>
                                         <a href="{{ path('gnet_platform_rendreIndispo', {'id': Ligne.id }) }}"><i style="font-size:20px" class="fa fa-times-circle-o tooltipped" data-position="bottom" data-delay="50" data-tooltip="Je rends dispo" aria-hidden="true"></i></a>
                                         <a href="{{ path('gnet_platform_rendredispo', {'id': Ligne.id }) }}"><i style="font-size:20px" class="fa fa-check-circle-o tooltipped" data-position="bottom" data-delay="50" data-tooltip="Je prends" aria-hidden="true"></i></a>
                                         </td>

                                          {%  endfor %}
                                        </tr>

                                    </tbody>

                                </table>

                            </div>

                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->

            </div>
            <!-- /.row -->

        </div>
        <!-- /#page-wrapper -->
        {% endif %}
<script>
$(document).ready(function(){
  $('.tooltipped').tooltip({delay: 50});
});

</script>


           {% endblock %}
