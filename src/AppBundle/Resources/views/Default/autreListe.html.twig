{% extends "AppBundle:Default:layout.html.twig" %}
{% block body %}
{% if app.user.username == User.username %}

<div id="page-wrapper"> <h1><br><br><br>Petit malin... Tu attendra Noël comme tout le monde pour connaitre tes cadeaux... <br> Pour modifier ta liste, va dans "Ma Liste"<h1></div>

{% elseif (app.user.birthday|date('U') > '2000-01-01'|date('U')) %}

<div id="page-wrapper"> <h1><br><br><br>Tu es bien trop jeune pour accéder à cette page ;)<h1></div>


{% else %}

<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Liste de {{ User.username }} </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Statut</th>
                                            <th>Object</th>
                                            <th>Commentaire</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for Ligne in Liste %}
                                          <tr class="odd gradeX">
                                          <td>
                                          {% if Ligne.Pris == 1 %}
                                          
                                          <img src="{{ asset('img/rouge.png') }}" alt="Déjà pris" height="20" >
                                          {% else %}
                                          <img src="{{ asset('img/vert.jpeg') }}" alt="Dispo"  height="20">
                                          {% endif %}
                                          </td>
                                        <td>{{ Ligne.description }}</td>
                                        
                                         <td>{{ Ligne.commentaire }}</td>
                                         <td><a href="{{ path('gnet_platform_editComment', {'id': Ligne.id }) }}"><span style="font-size:15px; margin-right:5px" class="glyphicon glyphicon-edit"></span></a>
                                         <a href="{{ path('gnet_platform_rendreIndispo', {'id': Ligne.id }) }}"><span style="font-size:15px; margin-right:5px" class="glyphicon glyphicon-remove-circle"></span></a>
                                         <a href="{{ path('gnet_platform_rendredispo', {'id': Ligne.id }) }}"><span style="font-size:15px;" class="glyphicon glyphicon-ok-circle"></span></a>
                                         </td>
                                         
                                          {%  endfor %}
                                        </tr>

                                    </tbody>

                                </table>
                                <div class="col-lg-12">
                                        Légende : <br><span style="font-size:15px; margin-right:5px" class="glyphicon glyphicon-edit"> Modifier</span><br>
                                        <span style="font-size:15px; " class="glyphicon glyphicon-remove-circle">Rendre indisponible</span><br>
                                        <span style="font-size:15px;" class="glyphicon glyphicon-ok-circle">Rendre disponible</span><br>
                                        

                                        </div>
                            </div>

                            <!-- /.table-responsive -->
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->

            </div>
            <!-- /.row -->
            
        </div>
        <!-- /#page-wrapper -->
        {% endif %}

      

           {% endblock %}
           