

{% extends "AppBundle:Default:layout.html.twig" %}

{% block body %}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Ajouter un souhait</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">

                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                                  {{ form_errors(form) }}

                                     <div class="row">
                                       <div class="input-field col s12">
                                           {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                           {{ form_errors(form.description) }}
                                           {{ form_widget(form.description, {'attr': {'class': 'form-control'}})}}
                                       </div>
                                       </div>


                                       <div class="row">
                                       <div class="input-field col s6">
                                           {{ form_label(form.commentaire, "Commentaire", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
                                           {{ form_errors(form.commentaire) }}
                                           {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}})}}
                                       </div>
                                       <div class="input-field  col s6">
                                           {{ form_label(form.url, "Un lien web ? (merci de mettre l'url compl√®te : 'http://www.com')", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
                                           {{ form_errors(form.url) }}
                                           {{ form_widget(form.url, {'attr': {'class': 'form-control'}})}}
                                       </div>
                                       </div>
                                       <div class="row">

                                       <div class="input-field  col s6">
                                       {{ form_widget(form.commun, {'attr': {'class': 'css_checkbox', 'onchange' : 'commun()'}})}}

                                           {{ form_label(form.commun, "", {'label_attr': {'class': 'col-sm-6 control-label'}}) }}
                                           {{ form_errors(form.commun) }}
                                       </div>
                                       <div class="input-field  col s6">
                                       {{ form_widget(form.communfamille, {'attr': {'class': 'css_checkbox', 'onchange' : 'communfamille()'}})}}

                                           {{ form_label(form.communfamille, "",{'label_attr': {'class': 'col-sm-6'}}) }}
                                           {{ form_errors(form.communfamille) }}
                                       </div>
                                       </div>

                                        <div class="row" style="margin-top:70px">
                                        <div class="col s4">
                                        </div>



                                            <div class="col s4">
                                                                                <button class="btn waves-effect waves-light" type="submit" name="action">Valider
                                                                                   <i class="material-icons right">send</i>
                                                                                 </button>
                                                                                {{ form_end(form) }}

                                                                                                                </div>

                                                                                                            <div class="col s4">

                                                                                                                                                                                                                </div>

                                                                                                                                                                                                            </div>                                        {{ form_end(form) }}





                                </div>

                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <script>
        function communfamille(){

        if (document.getElementById('ObjetListe_communfamille').checked == true){
        document.getElementById('ObjetListe_commun').disabled = true;
        }
        else{
        document.getElementById('ObjetListe_commun').disabled = false;
        }}
        function commun(){

        if (document.getElementById('ObjetListe_commun').checked == true){
        document.getElementById('ObjetListe_communfamille').disabled = true;
        }
        else {
        document.getElementById('ObjetListe_communfamille').disabled = false;

        }
        }
        </script>
        {% endblock %}
